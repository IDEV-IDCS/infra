# Plane Configuration
WEB_URL=https://plane.devcode.live
SECRET_KEY=change-this-to-a-random-secret-key-32-chars-min
DEBUG=0

# Use your existing PostgreSQL
DATABASE_URL=postgresql://username:password@your-postgres-host:5432/plane_db

# Use your existing Redis
REDIS_URL=redis://your-redis-host:6379/0

# Use your external MinIO
USE_MINIO=1
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-minio-access-key
AWS_SECRET_ACCESS_KEY=your-minio-secret-key
AWS_S3_ENDPOINT_URL=https://minio.devcode.live
AWS_S3_BUCKET_NAME=plane-uploads
MINIO_ROOT_USER=your-minio-access-key
MINIO_ROOT_PASSWORD=your-minio-secret-key

# File upload limit
FILE_SIZE_LIMIT=5242880

# Email (Optional)
EMAIL_HOST=
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_PORT=587
EMAIL_USE_TLS=1
DEFAULT_FROM_EMAIL=

# OIDC Configuration (configured via web UI at /god-mode/authentication/oidc)
# These are for reference - actual config done in Plane admin panel
# OIDC_CLIENT_ID=plane-client
# OIDC_CLIENT_SECRET=your-keycloak-client-secret
# OIDC_ISSUER_URL=https://keycloak.devcode.live/realms/your-realm
