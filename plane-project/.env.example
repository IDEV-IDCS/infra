# Plane Configuration
WEB_URL=https://plane.devcode.live
SECRET_KEY=CHANGE_THIS_TO_A_SECURE_SECRET_KEY_32_CHARS_MIN
DEBUG=0

# Use your existing PostgreSQL
DATABASE_URL=postgresql://username:password@your-postgres-host:5432/plane_db

# Use your existing Redis
REDIS_URL=redis://your-redis-host:6379/0

# Use AWS S3 (Mumbai region)
USE_MINIO=0
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY_ID
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_ACCESS_KEY
AWS_S3_BUCKET_NAME=qpg-plane

# File upload limit
FILE_SIZE_LIMIT=5242880

# Email (Optional)
EMAIL_HOST=
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_PORT=587
EMAIL_USE_TLS=1
DEFAULT_FROM_EMAIL=

# OIDC Configuration (configured via web UI at /god-mode/authentication/oidc)
# These are for reference - actual config done in Plane admin panel
# OIDC_CLIENT_ID=plane-client
# OIDC_CLIENT_SECRET=YOUR_KEYCLOAK_CLIENT_SECRET
# OIDC_ISSUER_URL=https://keycloak.devcode.live/realms/your-realm
